// Quest - Jira Clone Database Schema
// Prisma schema for PostgreSQL (Neon)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// Authentication Models (NextAuth)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts          Account[]
  sessions          Session[]
  ownedWorkspaces   Workspace[]       @relation("WorkspaceOwner")
  workspaceMemberships WorkspaceMember[]
  ledProjects       Project[]         @relation("ProjectLead")
  assignedIssues    Issue[]           @relation("IssueAssignee")
  reportedIssues    Issue[]           @relation("IssueReporter")
  comments          Comment[]         @relation("CommentAuthor")
  activities        Activity[]        @relation("ActivityActor")
  sentInvitations   Invitation[]      @relation("InvitationSender")
  savedFilters      SavedFilter[]
  notifications     Notification[]    @relation("NotificationRecipient")
  notificationsActed Notification[]   @relation("NotificationActor")
  uploadedAttachments Attachment[]    @relation("AttachmentUploader")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Workspace Models
// ============================================

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  image     String?
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  owner       User              @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members     WorkspaceMember[]
  projects    Project[]
  invitations Invitation[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  userId      String
  workspaceId String
  role        WorkspaceRole @default(DEVELOPER)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("workspace_members")
}

enum WorkspaceRole {
  ADMIN
  DEVELOPER
  TESTER
  GUEST
}

// ============================================
// Project Models
// ============================================

model Project {
  id          String   @id @default(cuid())
  name        String
  key         String   // e.g., "QUEST", "PROJ"
  description String?  @db.Text
  workspaceId String
  leadId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  workspace    Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  lead         User?         @relation("ProjectLead", fields: [leadId], references: [id], onDelete: SetNull)
  issues       Issue[]
  labels       Label[]
  savedFilters SavedFilter[]
  sprints      Sprint[]

  @@unique([workspaceId, key])
  @@map("projects")
}

// ============================================
// Issue Models
// ============================================

model Issue {
  id          String        @id @default(cuid())
  key         String        // e.g., "QUEST-1", "PROJ-42"
  title       String
  description String?       @db.Text
  type        IssueType     @default(TASK)
  status      IssueStatus   @default(BACKLOG)
  priority    IssuePriority @default(MEDIUM)
  projectId   String
  assigneeId  String?
  reporterId  String
  dueDate     DateTime?
  startDate   DateTime?
  storyPoints Int?
  flagged     Boolean       @default(false)
  order       Int           @default(0)
  parentId    String?       // For subtasks
  sprintId    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  project    Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee   User?        @relation("IssueAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  reporter   User         @relation("IssueReporter", fields: [reporterId], references: [id], onDelete: Cascade)
  parent     Issue?       @relation("IssueSubtasks", fields: [parentId], references: [id], onDelete: SetNull)
  subtasks   Issue[]      @relation("IssueSubtasks")
  sprint     Sprint?      @relation(fields: [sprintId], references: [id], onDelete: SetNull)
  labels        IssueLabel[]
  comments      Comment[]
  activities    Activity[]
  notifications Notification[]
  attachments   Attachment[]
  linksFrom     IssueLink[]   @relation("LinksFrom")
  linksTo       IssueLink[]   @relation("LinksTo")

  @@unique([projectId, key])
  @@index([projectId, status])
  @@index([assigneeId])
  @@index([reporterId])
  @@index([sprintId])
  @@map("issues")
}

enum IssueType {
  EPIC
  STORY
  TASK
  BUG
}

enum IssueStatus {
  BACKLOG
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
  CANCELLED
}

enum IssuePriority {
  URGENT
  HIGH
  MEDIUM
  LOW
  NONE
}

enum SprintStatus {
  PLANNED
  ACTIVE
  COMPLETED
}

enum LinkType {
  BLOCKS
  IS_BLOCKED_BY
  RELATES_TO
  DUPLICATES
  IS_DUPLICATED_BY
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum ActivityAction {
  ISSUE_CREATED
  ISSUE_UPDATED
  ISSUE_DELETED
  ISSUE_STATUS_CHANGED
  ISSUE_ASSIGNED
  ISSUE_PRIORITY_CHANGED
  COMMENT_ADDED
  COMMENT_UPDATED
  COMMENT_DELETED
}

enum NotificationType {
  ISSUE_ASSIGNED
  ISSUE_STATUS_CHANGED
  COMMENT_ADDED
}

// ============================================
// Label Models
// ============================================

model Label {
  id        String   @id @default(cuid())
  name      String
  color     String   // Hex color code
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  IssueLabel[]

  @@unique([projectId, name])
  @@map("labels")
}

model IssueLabel {
  issueId   String
  labelId   String
  createdAt DateTime @default(now())

  // Relations
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  label Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@id([issueId, labelId])
  @@map("issue_labels")
}

// ============================================
// Comment Model
// ============================================

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  issueId   String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  issue  Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  author User  @relation("CommentAuthor", fields: [authorId], references: [id])

  @@index([issueId])
  @@map("comments")
}

// ============================================
// Activity Model
// ============================================

model Activity {
  id        String         @id @default(cuid())
  action    ActivityAction
  issueId   String
  actorId   String
  metadata  Json?
  createdAt DateTime       @default(now())

  // Relations
  issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  actor User  @relation("ActivityActor", fields: [actorId], references: [id])

  @@index([issueId])
  @@map("activities")
}

// ============================================
// Invitation Model
// ============================================

model Invitation {
  id          String           @id @default(cuid())
  email       String
  role        WorkspaceRole    @default(DEVELOPER)
  workspaceId String
  invitedById String
  token       String           @unique @default(cuid())
  status      InvitationStatus @default(PENDING)
  expiresAt   DateTime
  createdAt   DateTime         @default(now())

  // Relations
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation("InvitationSender", fields: [invitedById], references: [id])

  @@unique([email, workspaceId])
  @@index([token])
  @@map("invitations")
}

// ============================================
// Saved Filter Model
// ============================================

model SavedFilter {
  id        String   @id @default(cuid())
  name      String
  filters   Json
  projectId String
  userId    String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId, name])
  @@index([projectId, userId])
  @@map("saved_filters")
}

// ============================================
// Notification Model
// ============================================

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String?
  link      String?
  userId    String
  actorId   String?
  issueId   String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  user  User   @relation("NotificationRecipient", fields: [userId], references: [id], onDelete: Cascade)
  actor User?  @relation("NotificationActor", fields: [actorId], references: [id], onDelete: SetNull)
  issue Issue? @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("notifications")
}

// ============================================
// Attachment Model
// ============================================

model Attachment {
  id         String   @id @default(cuid())
  filename   String
  url        String
  size       Int
  mimeType   String
  issueId    String
  uploaderId String
  createdAt  DateTime @default(now())

  issue    Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
  uploader User  @relation("AttachmentUploader", fields: [uploaderId], references: [id])

  @@index([issueId])
  @@map("attachments")
}

// ============================================
// Sprint Model
// ============================================

model Sprint {
  id        String       @id @default(cuid())
  name      String
  goal      String?      @db.Text
  startDate DateTime?
  endDate   DateTime?
  status    SprintStatus @default(PLANNED)
  projectId String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues  Issue[]

  @@unique([projectId, name])
  @@map("sprints")
}

// ============================================
// Issue Link Model
// ============================================

model IssueLink {
  id          String   @id @default(cuid())
  type        LinkType
  fromIssueId String
  toIssueId   String
  createdAt   DateTime @default(now())

  fromIssue Issue @relation("LinksFrom", fields: [fromIssueId], references: [id], onDelete: Cascade)
  toIssue   Issue @relation("LinksTo", fields: [toIssueId], references: [id], onDelete: Cascade)

  @@unique([fromIssueId, toIssueId, type])
  @@map("issue_links")
}
